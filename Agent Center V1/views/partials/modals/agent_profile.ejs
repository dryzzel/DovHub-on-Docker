<div id="agentProfileModal" class="modal-overlay" style="display: none;">
    <div class="modal-content" style="max-width: 1200px; width: 95%; max-height: 90vh; overflow-y: auto;">
        <h2 class="section-title" id="agentProfileTitle"><i data-feather="user"></i> Agent Profile</h2>
        <input type="hidden" id="agentProfileId">

        <div class="form-grid" style="margin-bottom: 20px;">
            <div>
                <label class="form-label">Start Date</label>
                <input type="date" id="statsStartDate" class="form-input">
            </div>
            <div>
                <label class="form-label">End Date</label>
                <input type="date" id="statsEndDate" class="form-input">
            </div>
            <button id="getAgentStatsBtn" class="login-btn"><i data-feather="bar-chart-2"></i> Get Stats</button>
        </div>

        <div id="agentStatsContainer" style="display: none;">
            <div class="stats-grid">
                <div class="stat-card">
                    <h4 class="stat-title">Contacts Called</h4>
                    <p class="stat-value" id="statsTotalCalls">0</p>
                </div>
                <div class="stat-card">
                    <h4 class="stat-title">Contact Rate</h4>
                    <p class="stat-value" id="statsContactRate">0%</p>
                </div>
                <div class="stat-card">
                    <h4 class="stat-title">Lead Conversion</h4>
                    <p class="stat-value" id="statsLeadConversion">0%</p>
                </div>
            </div>
            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 24px; margin-top: 24px;">
                <div style="width: 100%; max-width: 400px; margin: auto;">
                    <canvas id="agentDispositionChart"></canvas>
                </div>
                <div id="agentDispositionStatsList" class="stats-grid" style="align-content: start;"></div>
            </div>
        </div>

        <div class="modal-actions">
            <button id="closeProfileModalBtn" class="login-btn secondary-btn"><i data-feather="x"></i> Close</button>
        </div>
    </div>
</div>