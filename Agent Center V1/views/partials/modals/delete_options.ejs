<div id="deleteOptionsModal" class="modal-overlay" style="display: none;">
    <div class="modal-content" style="max-width: 400px; text-align: center;">
        <h2 class="section-title"><i data-feather="trash-2"></i> Delete Options</h2>
        <p style="margin-bottom: 20px;">What would you like to do?</p>
        <div style="display: flex; gap: 10px; justify-content: center; flex-direction: column;">
            <button id="btnDeleteSelected" class="login-btn danger-btn"
                onclick="document.getElementById('deleteOptionsModal').style.display='none'; deleteSelectedLeads();"><i
                    data-feather="check-square"></i> Delete Selected
                Leads</button>
            <button id="btnDeleteDuplicates" class="login-btn secondary-btn"
                onclick="document.getElementById('deleteOptionsModal').style.display='none'; handleDeduplicateLeads();"><i
                    data-feather="copy"></i> Delete
                Duplicates</button>
        </div>
        <div class="modal-actions" style="margin-top: 20px;">
            <button id="closeDeleteOptionsModalBtn" class="login-btn secondary-btn"
                onclick="document.getElementById('deleteOptionsModal').style.display='none'"><i data-feather="x"></i>
                Cancel</button>
        </div>
    </div>
</div>