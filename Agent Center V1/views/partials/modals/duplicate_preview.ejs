<div id="duplicatePreviewModal" class="modal-overlay" style="display: none;">
    <div class="modal-content" style="max-width: 800px; max-height: 80vh; display: flex; flex-direction: column;">
        <h2 class="section-title"><i data-feather="copy"></i> Duplicate Leads Preview</h2>
        <p id="duplicateCountMsg" style="margin-bottom: 10px;">Found 0 duplicate sets.</p>

        <div id="duplicatePreviewList"
            style="flex: 1; overflow-y: auto; margin-bottom: 20px; border: 1px solid var(--border); border-radius: 6px; background: var(--bg);">
            <!-- Duplicates will be listed here -->
        </div>

        <div class="modal-actions">
            <button id="confirmDeleteDuplicatesBtn" class="login-btn danger-btn"><i data-feather="trash-2"></i> Delete
                All
                Duplicates</button>
            <button id="closeDuplicateModalBtn" class="login-btn secondary-btn"><i data-feather="x"></i> Cancel</button>
        </div>
    </div>
</div>